<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CollaborationActivity">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"

        android:background="@drawable/shape_rect01">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="49dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="backBtn"

            android:padding="10dp"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Intiatives"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <!-- This immage should be an image of Sithunjwana Schools -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/employability"
        android:layout_gravity="top"
        android:layout_marginLeft="45dp"
        />

    <TextView
        android:id="@+id/txt1"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="3dp"
        android:text="Sinthunjwana schools is to help children by providing to the community ETC ETC LIST WHAT INITIATIVE IS AOUT " />

    <TextView
        android:id="@+id/txt2"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="3dp"
        android:text="Give a longer list of what they are about and how they have assisted people in the past using their service schools " />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        />


    <TextView
        android:id="@+id/txt4"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="5dp"
        android:text="This RecyclerView should be RecyclerView or listview and it should list and contain all of the items needed by Sithunjwana Schools" />

    <TextView
        android:id="@+id/txt3"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="15dp"
        android:text="Give a longer list of what they are about and how they have assisted people in the past using their service schools and list they can help by doating money or collaborating / donating items" />

    <Button
        android:id="@+id/btnMoney"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_margin="15dp"
        android:layout_gravity="center"

        android:background="@color/black"
        android:text="Donate Money"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnCollab"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_margin="3dp"
        android:layout_gravity="center"

        android:background="@color/black"
        android:text="Collaborate (Item Or Contact)"
        android:textColor="@android:color/white" />

</LinearLayout>