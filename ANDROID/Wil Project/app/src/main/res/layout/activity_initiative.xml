<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".InitiativeActivity"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"

        android:background="@drawable/shape_rect01">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="49dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="backBtn"

            android:padding="10dp"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Intiatives"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="italic" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/employability"
       android:layout_gravity="top"
        android:layout_marginLeft="45dp"

        />

    <TextView
        android:id="@+id/txt1"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="19dp"
        android:text="Listed below are Employability's various initiatives" />

    <TextView
        android:id="@+id/txt2"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:text="Involved with Socio-Economic Development and Charity" />

    <Button
        android:id="@+id/btnSith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="45dp"
        android:background="@color/black"
        android:text=" SITHUNJWANA FULL SERVICE SCHOOL "
        android:layout_gravity="center"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/btnKanyiso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/black"
        android:text="INKANYISO DAYCARE CENTRE FOR CHILDREN WITH SPECIAL NEEDS"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnThandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_margin="50dp"
        android:layout_marginTop="1000dp"
        android:background="@color/black"
        android:text="Thandi House"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnEmploy"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:background="@color/black"
        android:backgroundTint="@color/white"
        android:text="EMPLOYABILITY LIFE SKILLS TRAINING"
        android:textColor="@android:color/white" />


    <include
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_marginTop="30dp" />

</LinearLayout>
