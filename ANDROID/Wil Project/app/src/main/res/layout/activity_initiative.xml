<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".InitiativeActivity"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"

        android:background="@drawable/shape_rect01">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="49dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="backBtn"

            android:padding="10dp"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Intiatives"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="italic" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/employability"
       android:layout_gravity="top"
        android:layout_marginLeft="45dp"

        />

    <TextView
        android:id="@+id/usernameTxt"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/_13sdp"
        android:layout_margin="5dp"
        android:text="" />

    <TextView
        android:id="@+id/txt1"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/_13sdp"
        android:layout_margin="5dp"
        android:text="Listed below are Employability's various initiatives" />

    <TextView
        android:id="@+id/txt2"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/_13sdp"
        android:layout_margin="5dp"
        android:text="Please click on any to view more info on the project" />

    <Button
        android:id="@+id/btnSkills"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"

        android:layout_marginStart="15dp"
        android:textSize="@dimen/_13sdp"
        android:background="@color/black"
        android:text=" Life Skills Training "
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnThandi"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/_13sdp"
        android:layout_marginStart="15dp"
        android:background="@color/black"
        android:text="Thandi House"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnKanyiso"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"

        android:layout_marginStart="15dp"
        android:background="@color/black"
        android:textSize="@dimen/_13sdp"
        android:text="Inkanyiso Daycare Centre"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnSith"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="25dp"

        android:layout_marginStart="15dp"
        android:textSize="@dimen/_13sdp"
        android:background="@color/black"
        android:text="Food Donations"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/btnLearn"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"

        android:layout_marginStart="15dp"
        android:background="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="@dimen/_13sdp"
        android:text="Learn 2 Earn"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnSpeech"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"

        android:layout_marginStart="15dp"
        android:background="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="@dimen/_13sdp"
        android:text="Speech Therapy For Children"
        android:textColor="@android:color/white" />

    <include
        layout="@layout/footer"
        android:layout_width="430dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="LOG OUT"

        />

</LinearLayout>
